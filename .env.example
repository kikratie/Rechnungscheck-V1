# ===========================================
# BuchungsAI - Environment Variables
# ===========================================

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/buchungsai

# Redis (für BullMQ Job Queue)
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=change-me-to-a-random-string-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# OpenAI (GPT-4 Vision für OCR)
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o

# MinIO / S3 Storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=buchungsai
S3_REGION=eu-central-1
S3_USE_SSL=false

# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
